{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "noImplicitAny": false,
    "incremental": false,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@app/*": ["./src/app/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@cms": ["./src/components/cms/"],
      "@cms/*": ["./src/components/cms/*"],
      "@gql": ["./gql"],
      "@gql/*": ["./gql/*"],
      "@/gql": ["./gql"],
      "@/gql/*": ["./gql/*"],
      "@public/*": ["./public/*"],
      "@shared/*": ["./src/components/shared/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
