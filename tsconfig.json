{
    "compilerOptions": {
        "target": "es2022",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true
    },
    "exclude": [
        "**/.next/**",
        "**/.yarn/**",
        "**/node_modules/**",
        "**/dist/**",
        "**/lib/**"
    ]
}
